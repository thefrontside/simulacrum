{
  "gitSiteUrl": "https://github.com/thefrontside/simulacrum/",
  "pkgManagers": {
    "javascript": {
      "version": true,
      "getPublishedVersion": {
        "use": "fetch:check",
        "options": {
          "url": "https://registry.npmjs.com/${ pkg.pkg }/${ pkg.pkgFile.version }"
        }
      },
      "publish": "npm publish --access public",
      "postpublish": {
        "use": "fetch:check",
        "options": {
          "url": "https://registry.npmjs.com/${ pkg.pkg }/${ pkg.pkgFile.version }"
        },
        "retries": [5000, 5000, 5000]
      }
    }
  },
  "changeTags": {
    "feat": "New Features",
    "enhance": "Enhancements",
    "bug": "Bug Fixes",
    "deps": "Dependencies"
  },
  "packages": {
    "@simulacrum/foundation-simulator": {
      "path": "./packages/foundation",
      "manager": "javascript",
      "dependencies": []
    },
    "@simulacrum/auth0-simulator": {
      "path": "./packages/auth0",
      "manager": "javascript",
      "dependencies": ["@simulacrum/server", "@simulacrum/client"]
    },
    "@simulacrum/ldap-simulator": {
      "path": "./packages/ldap",
      "manager": "javascript",
      "dependencies": ["@simulacrum/server", "@simulacrum/client"]
    },
    "@simulacrum/github-api-simulator": {
      "path": "./packages/github-api",
      "manager": "javascript",
      "dependencies": []
    }
  }
}
