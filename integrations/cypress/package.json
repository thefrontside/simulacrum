{
  "name": "@simulacrum/auth0-cypress",
  "version": "0.2.2",
  "description": "Cypress simulacrum commands",
  "main": "dist/support/index.js",
  "types": "dist/support/index.d.ts",
  "repository": "https://github.com/thefrontside/simulacrum.git",
  "author": "Frontside Engineering <engineering@frontside.com>",
  "license": "MIT",
  "files": [
    "dist/**/*",
    "cypress/**/*",
    "cypress.env.json",
    "cypress.json",
    "CHANGELOG.md",
    "README.md"
  ],
  "scripts": {
    "cypress:browser": "cypress open",
    "cypress:open": "npm-run-all --parallel start:auth0 start:server cypress:browser",
    "start:server": "cd ../../examples/nextjs/auth0-react && npm install && npm run dev",
    "cypress:run": "npx cypress run --spec 'cypress/integration/*.ts'",
    "start:auth0": "PORT=4000 npx auth0-simulator",
    "start:auth0-dev": "PORT=4000 node ../../packages/auth0/bin/index.js",
    "test": "start-server-and-test 'npm run start:server' http://localhost:3000 'npm run start:auth0' http://localhost:4000 cypress:run",
    "build": "npm run prepack",
    "prepack": "tsc --build tsconfig.dist.json",
    "lint": "eslint \"src/**/*.ts\""
  },
  "dependencies": {
    "@auth0/auth0-spa-js": "^1.16.1",
    "@effection/atom": "2.0.1",
    "cross-fetch": "^3.1.0",
    "cypress": "^8.6.0"
  },
  "devDependencies": {
    "@frontside/eslint-config": "^3.0.0",
    "@frontside/tsconfig": "^3.0.0",
    "@frontside/typescript": "^3.0.0",
    "npm-run-all": "^4.1.5",
    "start-server-and-test": "^1.13.1"
  },
  "volta": {
    "extends": "../../package.json"
  }
}
